<view class="cartContainer"><view class="cartList"><block wx:for="{{arr}}" wx:for-item="good" wx:for-index="index" wx:key="id"><view class="cartItem"><text data-event-opts="{{[['tap',[['changeChecked',['$0'],[[['arr','id',good.id]]]]]]]}}" class="{{['iconfont','icon-xuanzhong',(good.isChecked)?'selected':'']}}" bindtap="__e"></text><view class="shopItem"><image class="shopImg" src="{{good.listPicUrl}}"></image><view class="shopInfo"><text>{{good.name}}</text><text class="price">{{"￥"+good.counterPrice}}</text></view></view><view class="countCtrl"><text data-event-opts="{{[['tap',[['add',['$0'],[[['arr','id',good.id]]]]]]]}}" class="add" bindtap="__e">+</text><text class="count">{{good.goodNum}}</text><text data-event-opts="{{[['tap',[['minus',['$0'],[[['arr','id',good.id]]]]]]]}}" class="del" bindtap="__e">-</text></view></view></block></view><view class="cartFooter"><text class="{{['iconfont','icon-xuanzhong',(isSelect)?'selected':'']}}"></text><text class="allSelected">{{"已选"+skuNum}}</text><view class="right"><text class="totalPrice">{{"合计:"+totalPrice}}</text><text class="preOrder">下单</text></view></view></view>